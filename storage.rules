rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    function isSignedIn() {
      return request.auth != null;
    }

    function isAuctionSeller(auctionId) {
      return isSignedIn()
        && auctionId is string
        && auctionId.size() > 0
        && firestore.exists(/databases/(default)/documents/auctions/$(auctionId))
        && firestore.get(/databases/(default)/documents/auctions/$(auctionId)).data.sellerId == request.auth.uid;
    }

    // Avatars are stored as: avatars/{uid}_{timestamp}_{filename}
    match /avatars/{fileName} {
      allow read: if true;
      allow write: if isSignedIn() && fileName.matches('^' + request.auth.uid + '_.*');
    }

    // Auction images are stored as: auction_images/{auctionId}/{imageId}
    match /auction_images/{auctionId}/{imageId} {
      allow read: if true;
      allow write: if isAuctionSeller(auctionId)
        && request.resource != null
        && request.resource.size < 10 * 1024 * 1024
        && request.resource.contentType.matches('image/(jpeg|png|webp)');
    }

    // Default deny
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
